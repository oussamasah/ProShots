@{
    Layout = "/Views/Shared/_DashLayout.cshtml";
    @model ProShots.Models.ModelForm.PostForm

}

<div class="container">
    <div class="row">
        <a asp-controller="Blog" role="button" asp-action="Index" class="btn retrun"><i class="bi-arrow-left me-2"></i>Return</a>
        <h1 class="mt-3 mb-3">@(Model?.Id > 0 ? "Edit" : "Add")  Post </h1>
        <form id="PostForm" asp-action="@(Model?.Id>0 ? "Edit" : "Create")" method="POST" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.ValidationSummary()
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" autocomplete="Title" aria-required="true" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">


                        <label asp-for="Content" class="form-label"></label>
                        <textarea asp-for="Content" class="form-control" autocomplete="Content" aria-required="true" >


            </textarea>

                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">


                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-control" autocomplete="Status" aria-required="true">
             
                            <option value="Published">Published</option>
                            <option value="Unpublished">Unpublished</option>

                        </select>

                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="mb-3">
                        <label asp-for="Thumbnail" class="drop-container">
                            <span class="drop-title"><span class="bi bi-upload"></span>Drop Thumbnail here</span>
                            <input class="form-control" asp-for="Thumbnail" type="file" accept="image/*" >
                        </label>
                        <span asp-validation-for="Thumbnail" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="text-end">

                        <button type="submit" class="btn btn-dark mb-3"><i class="bi bi-box-arrow-in-down me-2"></i>@(Model?.Id > 0 ? "Edit Post " : "Save Gallery")</button>
                    </div>
                   
                </div>
            </div>

        </form>
    </div>
</div>